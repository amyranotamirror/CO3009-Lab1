#define YELLOW_LIGHT 1
#define GREEN_LIGHT 2
#define NUM_COLOR 3

#define GREEN_TIME 3
#define YELLOW_TIME 2
#define RED_TIME (GREEN_TIME + YELLOW_TIME)

