#include "analog_clock.h"

void init_analog_clock(){
	analog_led[0] = (GPIO_config){H_01_GPIO_Port, H_01_Pin};
	analog_led[1] = (GPIO_config){H_02_GPIO_Port, H_02_Pin};
	analog_led[2] = (GPIO_config){H_03_GPIO_Port, H_03_Pin};

	analog_led[3] = (GPIO_config){H_04_GPIO_Port, H_04_Pin};
	analog_led[4] = (GPIO_config){H_05_GPIO_Port, H_05_Pin};
	analog_led[5] = (GPIO_config){H_06_GPIO_Port, H_06_Pin};

	analog_led[6] = (GPIO_config){H_07_GPIO_Port, H_07_Pin};
	analog_led[7] = (GPIO_config){H_08_GPIO_Port, H_08_Pin};
	analog_led[8] = (GPIO_config){H_09_GPIO_Port, H_09_Pin};

	analog_led[9] = (GPIO_config){H_10_GPIO_Port, H_10_Pin};
	analog_led[10] = (GPIO_config){H_11_GPIO_Port, H_11_Pin};
	analog_led[11] = (GPIO_config){H_12_GPIO_Port, H_12_Pin};
	clearAllClock();
}
void turn_analog_led_on(int position){
	set_GPIO_off(&analog_led[position]);
}
void turn_analog_led_off(int position){
	set_GPIO_on(&analog_led[position]);
}
void clearAllClock(){
	for(int position = 0; position < NUM_LEDS; position++)
			turn_analog_led_off(position);
}
void test_clock(int position){
	turn_analog_led_on(position);
	if(position == 0)
		turn_analog_led_off(NUM_LEDS - 1);
	if(position != 0)
		turn_analog_led_off(position - 1);
}
